<?xml version="1.0" encoding="UTF-8" ?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="ehcache.xsd"
         updateCheck="true" monitoring="autodetect" dynamicConfig="true">

    <diskStore path="java.io.tmpdir/ehcache"/>

    <defaultCache maxEntriesLocalHeap="10000" eternal="false" timeToIdleSeconds="10" timeToLiveSeconds="10"
                  diskSpoolBufferSizeMB="20" maxEntriesLocalDisk="100000" diskExpiryThreadIntervalSeconds="120"
                  memoryStoreEvictionPolicy="LRU" transactionalMode="off" statistics="true">
        <persistence strategy="localTempSwap"/>
    </defaultCache>

    <!--
    <cache name="appEnvironments" />
    <cache name="appProperties" />
    <cache name="org.hibernate.cache.internal.StandardQueryCache"/>
    <cache name="org.hibernate.cache.spi.UpdateTimestampsCache"/>
    -->

</ehcache>